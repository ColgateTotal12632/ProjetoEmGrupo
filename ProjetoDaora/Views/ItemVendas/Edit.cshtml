@model ProjetoDaora.Models.ItemVenda

@{
    ViewData["Title"] = "Editar Item de Venda";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white d-flex align-items-center justify-content-between" style="background-color: #f0d165;">
            <h3 class="mb-0 text-dark fw-bold">Editar Item de Venda</h3>
            <span class="badge bg-dark text-white px-3 py-2">ID: @Model.ItemId</span>
        </div>

        <div class="card-body">
            <h5 class="text-muted mb-4">Atualize as informações do item de venda abaixo:</h5>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ItemId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="VendaId" class="form-label fw-semibold">Venda</label>
                        <select asp-for="VendaId" class="form-control rounded-3 shadow-sm" asp-items="ViewBag.VendaId"></select>
                        <span asp-validation-for="VendaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProdutoId" class="form-label fw-semibold">Produto</label>
                        <select asp-for="ProdutoId" class="form-control rounded-3 shadow-sm" asp-items="ViewBag.ProdutoId"></select>
                        <span asp-validation-for="ProdutoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Quantidade" class="form-label fw-semibold">Quantidade</label>
                        <input asp-for="Quantidade" class="form-control rounded-3 shadow-sm" placeholder="Ex: 3" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="PrecoUnitario" class="form-label fw-semibold">Preço Unitário</label>
                        <input asp-for="PrecoUnitario" class="form-control rounded-3 shadow-sm" placeholder="Ex: 49.90" />
                        <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="TotalItem" class="form-label fw-semibold">Total do Item</label>
                        <input asp-for="TotalItem" class="form-control rounded-3 shadow-sm" placeholder="Calculado automaticamente" />
                        <span asp-validation-for="TotalItem" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        ← Voltar para a lista
                    </a>
                    <input type="submit" value="Salvar Alterações" class="btn text-dark fw-bold px-4" style="background-color: #f0d165;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
