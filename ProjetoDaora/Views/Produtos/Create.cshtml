@model ProjetoDaora.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white" style="background-color: #f0d165;">
            <h3 class="mb-0 text-dark fw-bold">Criar Produto</h3>
        </div>
        <div class="card-body">
            <h5 class="text-muted mb-4">Preencha os dados do produto abaixo:</h5>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold"></label>
                    <input asp-for="Nome" class="form-control rounded-3 shadow-sm" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control rounded-3 shadow-sm" rows="3" placeholder="Descreva o produto"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Preco" class="form-label fw-semibold">Preço</label>
                        <input asp-for="Preco" class="form-control rounded-3 shadow-sm" placeholder="Ex: 49.90" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Estoque" class="form-label fw-semibold"></label>
                        <input asp-for="Estoque" class="form-control rounded-3 shadow-sm" placeholder="Quantidade em estoque" />
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DataCadastro" class="form-label fw-semibold"></label>
                    <input asp-for="DataCadastro" class="form-control rounded-3 shadow-sm" type="date" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        ← Voltar para a lista
                    </a>
                    <input type="submit" value="Criar Produto" class="btn text-dark fw-bold px-4" style="background-color: #f0d165;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
