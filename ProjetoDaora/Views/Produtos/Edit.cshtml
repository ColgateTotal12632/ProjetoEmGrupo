@model ProjetoDaora.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white d-flex align-items-center justify-content-between" style="background-color: #f0d165;">
            <h3 class="mb-0 text-dark fw-bold">Editar Produto</h3>
            <span class="badge bg-dark text-white px-3 py-2">ID: @Model.ProdutoId</span>
        </div>

        <div class="card-body">
            <h5 class="text-muted mb-4">Atualize as informações do produto abaixo:</h5>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ProdutoId" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control rounded-3 shadow-sm" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-semibold">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control rounded-3 shadow-sm" rows="3" placeholder="Atualize a descrição do produto"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Preco" class="form-label fw-semibold">Preço</label>
                        <input asp-for="Preco" class="form-control rounded-3 shadow-sm" placeholder="Ex: 49.90" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Estoque" class="form-label fw-semibold">Estoque</label>
                        <input asp-for="Estoque" class="form-control rounded-3 shadow-sm" placeholder="Quantidade disponível" />
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="DataCadastro" class="form-label fw-semibold">Data de Cadastro</label>
                        <input asp-for="DataCadastro" type="date" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="DataCadastro" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        ← Voltar para a lista
                    </a>
                    <input type="submit" value="Salvar Alterações" class="btn text-dark fw-bold px-4" style="background-color: #f0d165;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
