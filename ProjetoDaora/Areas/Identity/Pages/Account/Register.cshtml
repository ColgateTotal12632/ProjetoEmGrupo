@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-box">
    <div class="avatar">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
        </svg>
    </div>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>Cadastrar-se</h1>
        <h4>Insira seus dados</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="text-dark form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="text-dark form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" />
            <label asp-for="Input.Password" class="form-label">Senha</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="text-dark form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" />
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Senha</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">Registrar</button>
        </div>
        <p>
            Ja está cadastrado?
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Entrar em sua conta.</a>
        </p>
        <hr>
        <div class="d-flex justify-content-center gap-2">
            <button type="button" class="btn btn-warning w-50">
                <i class="bi bi-google"></i>Google
            </button>
            <button type="button" class="btn btn-warning w-50">
                <i class="bi bi-apple"></i> Apple
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    body {
        background: linear-gradient(135deg, #fafafa, #f0f0f0);
    }

    .login-box {
        background: linear-gradient(135deg, #f9f9f9 #ffffff);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        padding: 36px;
        width: 40%;
        height: 40rem;
        justify-content: center;
        margin-left: 30%;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.8s ease-in-out;
    }

</style>